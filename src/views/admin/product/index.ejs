<div class="row justify-content-center mt-3">
    <div class="col bg-dark-subtle p-3 rounded d-flex flex-column">
        <h1>My products</h1>
        <p>List all my product</p>
        <a href="/admin/product/create" class="btn btn-primary align-self-end"><i class="fa-solid fa-plus"></i> Add new
            product</a>
        <hr>

        <table class="table">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Price</th>
                <th scope="col">Description</th>
                <th scope="col">Image</th>
                <th scope="col">Actions</th>
            </tr>
            </thead>
            <tbody>
            <% products.forEach((product, index) => { %>
                <tr class="product-item">
                    <th scope="row"><%= index + 1 %></th>
                    <td><%= product.name %></td>
                    <td><%= product.price %></td>
                    <td><%= product.description %></td>
                    <td><img src="/public/images/<%= product.image %>"
                             class="card-img-top" alt="..." style="width: 100px;"></td>
                    <td>
                        <div>
                            <a href="/admin/product/<%= product.id %>/edit" class="link-warning me-3">
                                <i class="fa-solid fa-pen"></i></a>
                            <button class="delete-product bg-white border-0 link-danger" data-id="<%= product.id %>">
                                <i class="fa-solid fa-trash"></i></button>
                        </div>
                    </td>
                </tr>
            <% }) %>
            </tbody>
        </table>
    </div>
</div>